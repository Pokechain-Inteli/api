generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  pokemons  Pokemon[]
}

model Pokemon {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  image  String
  level  Int
  type   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
